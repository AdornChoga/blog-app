<%= render "shared/profile", user: @user %>

<div class="mt-4">
  <h4>Bio</h4>
  <i><%= @user.bio %></i>
</div>

<h5 class="mt-4 text-center">Posts</h5>

<% @posts.each_with_index do |post,index| %>
  <% if index < 2 %>
    <%= render "shared/post", post: post %>
  <% end %>
<% end %>

<button class="btn mt-4 bg-light d-block mx-auto"><%= link_to "See all posts", user_posts_path(@user.id) %></button>
