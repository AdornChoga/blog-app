<div class="d-flex flex-column mt-1 mx-3 border-top bg-secondary">
  <h4><%= post.title %></h4>
  <p><%= "#{post.text.slice(0, 180)}..." %></p>
  <p class="align-self-end px-1">
    <%= link_to "view post", user_post_path(@user.id, post.id), id: post.id, class: "link-to" %>
    Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %>
  </p>
</div>